{
    "name": "tortoise-conservation/system",
    "description": "Tortoise Conservation Management System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "TortoiseConservation\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t .",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
